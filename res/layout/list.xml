<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.dayosoft.quicknotes"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<Button android:text="Add Note" android:id="@+id/addButton"
		android:drawableLeft="@drawable/add" android:textSize="20dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
	</Button>

	<ListView
	    android:id="@+id/list"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="2"
	    android:divider="#ECF0DA"
	    android:dividerHeight="3px"
	    android:orientation="vertical"
	    android:paddingLeft="4dip"
	    android:paddingRight="4dip" >

	</ListView>
	<!-- com.admob.android.ads.AdView android:id="@+id/ad" android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		app:backgroundColor="#000000" app:primaryTextColor="#FFFFFF"
		app:secondaryTextColor="#CCCCCC" app:keywords="ginote note taking" /-->
</LinearLayout>
