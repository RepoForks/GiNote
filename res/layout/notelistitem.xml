<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itempanel"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="3dip" >

    <TextView
        android:id="@+id/todayIndicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:paddingLeft="8dip"
        android:text="Today"
        android:textColor="#000000"
        android:textSize="14dip"
        android:visibility="gone" >

    </TextView>

    <TextView
        android:id="@+id/yesterdayIndicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingLeft="8dip"
        android:text="Yesterday"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="14dip"
        android:visibility="gone" >
    </TextView>

    <TextView
        android:id="@+id/fewdaysIndicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:paddingLeft="8dip"
        android:text="A few days ago"
        android:textColor="#000000"
        android:textSize="14dip"
        android:visibility="gone" >

    </TextView>

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dip"
        android:textSize="25dip" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageSyncIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unsynced" />

        <TextView
            android:id="@+id/datetime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dip"
            android:textSize="12dip" />

    </LinearLayout>

    <TextView
        android:id="@+id/gpslocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dip"
        android:textSize="12dip"
        android:visibility="invisible" >
    </TextView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imagepanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <!--
             TextView android:id="@+id/imagepaneltext" android:text="Tap here to 
			view image(s)" android:layout_width="fill_parent" android:textSize="18dip" 
			android:textColor="#5E51E8" android:background="#FFFFFF" android:layout_height="wrap_content" 
			android:paddingLeft="5dip"></TextView
        -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/images"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>